    <script>
        const pesquisa = $('#q')
        setInterval(() => {
            if (pesquisa.val().length == 0) {
                $('.aluno').toArray().forEach(aluno => $(`#${aluno.id}`).show())
            }
            function veriCheks() {
                let tem = false
                const checks = window.document.getElementsByClassName('form-check-input-aluno')
                for (let cont = 0;cont < checks.length;cont++) {
                    const check = checks[cont]
                    if (check.checked == true) {
                        tem = true
                    }
                }
                return tem
            }
            if (veriCheks() === true) {
                $('#btn-exclu-alunos-sele').css({pointerEvents: 'all', backgroundColor: '#dc3545'})
            } else {
                $('#btn-exclu-alunos-sele').css({pointerEvents: 'none', backgroundColor: '#E87C87'})
            }
        }, 1)
        pesquisa.keyup(() => {
            socket.emit('veri-alunos-alunos-pesquisa', pesquisa.val())
        })
        socket.on('veri-alunos-alunos-pesquisa-res', alunosBrutas => {
            if (alunosBrutas) {
                $('.aluno').toArray().map((aluno, index) => {
                    const { alunos, ultimo } = alunosBrutas
                    if (alunos.includes(String(aluno.id).replace('-campo', ''))) {
                        if (index === ultimo) {
                            $(`#${aluno.id.replace('-campo', '')}-link-nav`).show()
                            $(`#${aluno.id.replace('-campo', '')}-link-nav>li`).attr('class', 'ultimo')
                            $(`#${aluno.id}`).show()
                        } else {
                            $(`#${aluno.id.replace('-campo', '')}-link-nav`).show()
                            $(`#${aluno.id.replace('-campo', '')}-link-nav>li`).attr('class', '')
                            $(`#${aluno.id}`).show()
                        }
                    } else {
                        $(`#${aluno.id.replace('-campo', '')}-link-nav`).hide()
                        $(`#${aluno.id}`).hide()
                    }
                })
            }
        })
        function marcarTodos() {
            const checkO = window.document.getElementById('form-check-input-todos').checked
            const checks = window.document.getElementsByClassName('form-check-input-aluno')
            for (let cont = 0;cont < checks.length;cont++) {
                const check = checks[cont]
                if ($(`#${check.id}`).is(":visible")) {
                    if (checkO != check.checked) {
                        check.click()
                    }
                }
            }
        }
        function excluSele() {
            let tem = ''
            const checks = window.document.getElementsByClassName('form-check-input-aluno')
            for (let cont = 0;cont < checks.length;cont++) {
                const check = checks[cont]
                if (check.checked == true) {
                    tem += String(check.id).replace('-check', ',')
                }
            }
            tem = tem.substring(0, tem.length-1)
            $('#form-aluno-exclu-todos').prop('action', `/alunos/excluir-todos/${tem}`)
            enviar('#form-aluno-exclu-todos')
        }
    </script>
