<style>
    .valor-copi {
        cursor: pointer;
        transition-timing-function: linear;
        transition-duration: 0.1s;
        color: #049DD9;
    }

    .valor-copi:hover {
        opacity: 70%;
    }

    #pesquisar-alunos {
        width: 40%;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 1%;
    }

    #pesquisar-alunos>svg {
        width: 9%;
        color: #049DD9;
        background-color: #ffffff;
        padding: 2%;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
    }

    #pesquisar-alunos>#q {
        width: 90%;
        border: 1px;
        border-radius: 0;
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
    }

    #pesquisar-alunos>#q:hover {
        box-shadow: none;
        outline: none;
        border: none;
    }

