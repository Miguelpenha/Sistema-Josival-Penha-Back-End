        width: 88%;
        border-color: #049DD9;
        background-color: #ffffff;
        border-radius: 10px;
        margin-left: 7.5%;
    }

    .alunos>thead, .alunos>tr, .alunos>tbody, .alunos>td {
        border-color: #049DD9;
    }

    .alunos th, td {
        padding: 2%;
        text-align: center;
        vertical-align: middle;
    }

    #link-aluno-editar {
        color: #0d6efd;
    }

    #link-aluno-editar:hover {
        color: #0B5ED7;
    }

    #link-aluno-excluir {
        color: #dc3545;
    }

    #link-aluno-excluir:hover {
        color: #BB2D3B;
    }

    .td-alunos {
        cursor: pointer;
    }

    .td-alunos:hover {
        transition-timing-function: linear;
        transition-duration: 0.2s;
        background-color: #ECECEC;
        border-radius: 10px;
    }

    .btn-expo {
        background-color: #049DD9;
        color: #ffffff;
    }

    .btn-expo:hover {
        background-color: #048bc0;
        color: #ffffff;
    }

    .aluno-model {
        padding: 2%;
        padding-top: 4%;
    }

    .aluno-model>.tit-md {
        color: #049DD9;
        text-align: center;
        margin-bottom: 5%;
    }

    .aluno-model>ul {
        list-style: none;
    }

    .campo {
        color: #049DD9;
    }

    .td-alunos>img {
