        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>
</a>

<script>
    socket.on('veri-grafico-gastos-gastos-res', gastos => {
        let maiorGasto = {
            preco: 0
        }
        gastos.map((gasto, index) => index != 0 ? gasto[1] > maiorGasto.preco ? maiorGasto = {
            preco: gasto[1],
            nome: gasto[0]
        }: null : null)
        let menorGasto = {
            preco: gastos[1][1]
        }
        gastos.map((gasto, index) => index != 0 ? gasto[1] < menorGasto.preco ? menorGasto = {
            preco: gasto[1],
            nome: gasto[0]
        }: null : null)
        socket.emit('media-tot-gastos', gastos)
        socket.on('media-tot-gastos-res', (total, media) => {
            socket.emit('convert-gasto', maiorGasto.preco, menorGasto.preco)
            socket.on('convert-gasto-res', (maiorGastoReal, menorGastoReal) => {
                google.charts.load('current', {
                    'packages': ['corechart', 'bar'],
                    'language': 'pt-br'
                })

                google.charts.setOnLoadCallback(drawChart);

                function drawChart() {
                    let data = google.visualization.arrayToDataTable(gastos)
                    let options = {
                        title: `Maior gasto: ${maiorGasto.nome}, ${maiorGastoReal}\nmenor gasto: ${menorGasto.nome}, ${menorGastoReal}\nTotal dos gastos: ${total}\nMédia dos gastos: ${media}`,
                        chartArea: {
                            width: '70%',
                            height: '50%'
                        },
                        hAxis: {
                            title: ``,
                            minValue: 0,
                            maxValue: maiorGasto,
                            titleTextStyle: {
                                bold: true
                            }
                        },
                        vAxis: {
                            title: 'Nome do gasto'
                        },
                        annotations: {
                            textStyle: {
                                color: '#ffffff'
                            }
                        }
                    }

                    let chart = new google.visualization.BarChart(document.getElementById('chart_div'))

                    chart.draw(data, options)
                }
            })  
        })
    })
</script>