                    <div class="modal-dialog">
                        <div class="modal-content gasto-model">
                            <h4 class="valor-copi tit-md" onclick="copiar('{{this.nome}}')" style="width: fit-content;display: block;margin-left: auto;margin-right: auto;">{{this.nome}}</h4>
                            <ul>
                                <li>
                                    <h5 class="campo" style="margin: 0;padding: 0;">
                                        Preço: <span class="valor-copi" onclick="copiar('{{this.preco}}')" style="margin: 0;padding: 0;">{{this.preco}}</span>
                                    </h5>
                                </li>
                                <li>
                                    <h5 class="campo" style="margin: 0;padding: 0;">
                                        Data de cadastro da gasto: <span class="valor-copi" onclick="copiar('{{this.criacao.data}} as {{this.criacao.hora}}')" style="margin: 0;padding: 0;">{{this.criacao.data}} as {{this.criacao.hora}}</span>
                                    </h5>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/each}}
        </tbody>
    </table>
    <script>
        const pesquisa = $('#q')
        setInterval(() => {
            if (pesquisa.val().length == 0) {
                $('.gasto').toArray().forEach(gasto => $(`#${gasto.id}`).show())
            }
            function veriCheks() {
                let tem = false
                const checks = window.document.getElementsByClassName('form-check-input-gasto')
                for (let cont = 0;cont < checks.length;cont++) {
                    const check = checks[cont]
                    if (check.checked == true) {
                        tem = true
                    }
                }
                return tem
            }
            if (veriCheks() === true) {
                $('#btn-exclu-gastos-sele').css({pointerEvents: 'all', backgroundColor: '#dc3545'})
            } else {
                $('#btn-exclu-gastos-sele').css({pointerEvents: 'none', backgroundColor: '#E87C87'})
            }
        }, 1)
        pesquisa.keyup(() => {
            socket.emit('veri-gastos-gastos-pesquisa', pesquisa.val())
        })
        socket.on('veri-gastos-gastos-pesquisa-res', gastosBrutas => {
            if (gastosBrutas) {
                $('.gasto').toArray().map((gasto, index) => {
                    const { gastos, ultimo } = gastosBrutas
                    if (gastos.includes(String(gasto.id).replace('-campo', ''))) {
                        if (index === ultimo) {
                            $(`#${gasto.id.replace('-campo', '')}-link-nav`).show()
                            $(`#${gasto.id.replace('-campo', '')}-link-nav>li`).attr('class', 'ultimo')
                            $(`#${gasto.id}`).show()
                        } else {
                            $(`#${gasto.id.replace('-campo', '')}-link-nav`).show()
                            $(`#${gasto.id.replace('-campo', '')}-link-nav>li`).attr('class', '')
                            $(`#${gasto.id}`).show()
                        }
                    } else {
                        $(`#${gasto.id.replace('-campo', '')}-link-nav`).hide()
                        $(`#${gasto.id}`).hide()
                    }
                })
            }
        })
        function marcarTodos() {
            const checkO = window.document.getElementById('form-check-input-todos').checked
            const checks = window.document.getElementsByClassName('form-check-input-gasto')
            for (let cont = 0;cont < checks.length;cont++) {
                const check = checks[cont]
                if ($(`#${check.id}`).is(":visible")) {
                    if (checkO != check.checked) {
                        check.click()
                    }
                }
            }
        }
        function excluSele() {
            let tem = ''
            const checks = window.document.getElementsByClassName('form-check-input-gasto')
            for (let cont = 0;cont < checks.length;cont++) {
                const check = checks[cont]
                if (check.checked == true) {
                    tem += String(check.id).replace('-check', ',')
                }
            }
            tem = tem.substring(0, tem.length-1)
            $('#form-gasto-exclu-todos').prop('action', `/financeiro/gastos/excluir-todos/${tem}`)
            enviar('#form-gasto-exclu-todos')
        }
    </script>
