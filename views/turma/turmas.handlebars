                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </a>
                    </form>
                    <a href="/turmas/exportar" class="btn-pd btn-expo" style="display: inline-block;">
                        Exportar dados
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-table" viewBox="0 0 16 16">
                            <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm15 2h-4v3h4V4zm0 4h-4v3h4V8zm0 4h-4v3h3a1 1 0 0 0 1-1v-2zm-5 3v-3H6v3h4zm-5 0v-3H1v2a1 1 0 0 0 1 1h3zm-4-4h4V8H1v3zm0-4h4V4H1v3zm5-3v3h4V4H6zm4 4H6v3h4V8z"/>
                        </svg>
                    </a>
                </td>
            </tr>
            <tr>
                <th scope="col">
                    <input class="form-check-input form-check-input-todos" id="form-check-input-todos" type="checkbox" onclick="marcarTodos()">
                </th>
                <th scope="col">Nome da turma</th>
                <th scope="col">Série</th>
                <th stope="col">Turno</th>
                <th stope="col">Alunos: </th>
                <th stope="col">Professora: </th>
                <th stope="col">Data de cadastro</th>
                <th stope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each turmas}}
                <a id="{{this.id}}"></a>
                <tr class="turma" id="{{this.id}}-campo">
                    <td class="td-turmas">
                        <input class="form-check-input form-check-input-turma" type="checkbox" id="{{this.id}}-check">
                    </td>
                    <input type="hidden" name="id" value="{{this.id}}" id="id">
                    <td class="td-turmas" data-bs-toggle="modal" data-bs-target="#turma-modal-{{this.id}}">
                        <span style="margin: 0;padding: 0;">
                            {{this.nome}}
                        </span>
                    </td>
                    <td class="td-turmas" data-bs-toggle="modal" data-bs-target="#turma-modal-{{this.id}}">
                        <span style="margin: 0;padding: 0;">
                            {{this.serie}}
                        </span>
                    </td>
                    <td class="td-turmas" data-bs-toggle="modal" data-bs-target="#turma-modal-{{this.id}}">
                        <span style="margin: 0;padding: 0;">
                            {{this.turno}}
                        </span>
                    </td>
                    <td class="td-turmas" data-bs-toggle="modal" data-bs-target="#turma-modal-{{this.id}}">
                        <span style="margin: 0;padding: 0;">
                            {{this.alunos}} alunos
                        </span>
                    </td>
                    <td class="td-turmas" data-bs-toggle="modal" data-bs-target="#turma-modal-{{this.id}}">
                        <span style="margin: 0;padding: 0;">
                            {{this.professora}}
                        </span>
                    </td>
                    <td class="td-turmas" data-bs-toggle="modal" data-bs-target="#turma-modal-{{this.id}}">
                        <span style="margin: 0;padding: 0;">
                            {{this.criacao.data}} as {{this.criacao.hora}}
                        </span>
                    </td>
                    <td>
                        <form action="/turmas/editar/{{this.id}}" method="POST" id="form-turma-editar-{{this.id}}" style="display: inline-block;float: left;margin-left: 20%;">
                            <a style="cursor: pointer;" id="link-turma-editar" onclick="enviar('#form-turma-editar-{{this.id}}')" >
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                </svg>
                            </a>
                        </form>
                        <form action="/turmas/excluir/{{this.id}}" method="POST" id="form-turma-exclu-{{this.id}}" style="display: inline-block;float: right;margin-right: 20%;">
                            <a style="cursor: pointer;" id="link-turma-excluir" onclick="enviar('#form-turma-exclu-{{this.id}}')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                </svg>
                            </a>
                        </form>
                    </td>
                </tr>
                <div class="modal fade" id="turma-modal-{{this.id}}" tabindex="-1" aria-labelledby="turma-modal-{{this.id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content turma-model">
                            <h4 class="valor-copi tit-md" onclick="copiar('{{this.nome}}')" style="width: fit-content;display: block;margin-left: auto;margin-right: auto;">{{this.nome}}</h4>
                            <ul>
                                <li>
                                    <h5 class="campo" style="margin: 0;padding: 0;">
                                        Série: <span class="valor-copi" onclick="copiar('{{this.serie}}')" style="margin: 0;padding: 0;">{{this.serie}}</span>
                                    </h5>
                                </li>
                                <li>
                                    <h5 class="campo" style="margin: 0;padding: 0;">
                                        Turno: <span class="valor-copi" onclick="copiar('{{this.turno}}')" style="margin: 0;padding: 0;">{{this.turno}}</span>
                                    </h5>
                                </li>
                                <li>
                                    <h5 class="campo" style="margin: 0;padding: 0;">
                                        Quantidade de alunos: <span class="valor-copi" onclick="copiar('{{this.alunos}}')" style="margin: 0;padding: 0;">{{this.alunos}}</span>
                                    </h5>
                                </li>
                                <li>
                                    <h5 class="campo" style="margin: 0;padding: 0;">
                                        Data de cadastro da turma: <span class="valor-copi" onclick="copiar('{{this.criacao.data}} as {{this.criacao.hora}}')" style="margin: 0;padding: 0;">{{this.criacao.data}} as {{this.criacao.hora}}</span>
                                    </h5>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/each}}
        </tbody>
    </table>
    <script>
        const pesquisa = $('#q')
        setInterval(() => {
            if (pesquisa.val().length == 0) {
                $('.turma').toArray().forEach(turma => $(`#${turma.id}`).show())
            }
            function veriCheks() {
                let tem = false
                const checks = window.document.getElementsByClassName('form-check-input-turma')
                for (let cont = 0;cont < checks.length;cont++) {
                    const check = checks[cont]
                    if (check.checked == true) {
                        tem = true
                    }
                }
                return tem
            }
            if (veriCheks() === true) {
                $('#btn-exclu-turmas-sele').css({pointerEvents: 'all', backgroundColor: '#dc3545'})
            } else {
                $('#btn-exclu-turmas-sele').css({pointerEvents: 'none', backgroundColor: '#E87C87'})
            }
        }, 1)
        pesquisa.keyup(() => {
            socket.emit('veri-turmas-turmas-pesquisa', pesquisa.val())
        })
        socket.on('veri-turmas-turmas-pesquisa-res', turmasBrutas => {
            if (turmasBrutas) {
                $('.turma').toArray().map((turma, index) => {
                    const { turmas, ultimo } = turmasBrutas
                    if (turmas.includes(String(turma.id).replace('-campo', ''))) {
                        if (index === ultimo) {
                            $(`#${turma.id.replace('-campo', '')}-link-nav`).show()
                            $(`#${turma.id.replace('-campo', '')}-link-nav>li`).attr('class', 'ultimo')
                            $(`#${turma.id}`).show()
                        } else {
                            $(`#${turma.id.replace('-campo', '')}-link-nav`).show()
                            $(`#${turma.id.replace('-campo', '')}-link-nav>li`).attr('class', '')
                            $(`#${turma.id}`).show()
                        }
                    } else {
                        $(`#${turma.id.replace('-campo', '')}-link-nav`).hide()
                        $(`#${turma.id}`).hide()
                    }
                })
            }
        })
        function marcarTodos() {
            const checkO = window.document.getElementById('form-check-input-todos').checked
            const checks = window.document.getElementsByClassName('form-check-input-turma')
            for (let cont = 0;cont < checks.length;cont++) {
                const check = checks[cont]
                if ($(`#${check.id}`).is(":visible")) {
                    if (checkO != check.checked) {
                        check.click()
                    }
                }
            }
        }
        function excluSele() {
            let tem = ''
            const checks = window.document.getElementsByClassName('form-check-input-turma')
            for (let cont = 0;cont < checks.length;cont++) {
                const check = checks[cont]
                if (check.checked == true) {
                    tem += String(check.id).replace('-check', ',')
                }
            }
            tem = tem.substring(0, tem.length-1)
            $('#form-turma-exclu-todos').prop('action', `/turmas/excluir-todos/${tem}`)
            enviar('#form-turma-exclu-todos')
        }
    </script>
