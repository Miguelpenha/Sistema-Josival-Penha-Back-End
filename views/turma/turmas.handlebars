<style>
    .valor-copi {
        cursor: pointer;
        transition-timing-function: linear;
        transition-duration: 0.1s;
        color: #049DD9;
    }

    .valor-copi:hover {
        opacity: 70%;
    }

    #pesquisar-turmas {
        width: 40%;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 1%;
    }

    #pesquisar-turmas>svg {
        width: 9%;
        color: #049DD9;
        background-color: #ffffff;
        padding: 2%;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
    }

    #pesquisar-turmas>#q {
        width: 90%;
        border: 1px;
        border-radius: 0;
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
    }

    #pesquisar-turmas>#q:hover {
        box-shadow: none;
        outline: none;
        border: none;
    }

    #pesquisar-turmas>#q::-webkit-search-cancel-button {
        -webkit-appearance: none;
    }

    .turmas {
        width: 80%;
        border-color: #049DD9;
        background-color: #ffffff;
        border-radius: 10px;
        margin-left: 10%;
    }

    .turmas>thead, .turmas>tr, .turmas>tbody, .turmas>td {
        border-color: #049DD9;
    }

    .turmas th, td {
        padding: 2%;
        text-align: center;
        vertical-align: middle;
    }

    #link-turma-editar {
        color: #0d6efd;
    }

    #link-turma-editar:hover {
        color: #0B5ED7;
    }

    #link-turma-excluir {
        color: #dc3545;
    }

    #link-turma-excluir:hover {
        color: #BB2D3B;
    }

    .td-turmas {
        cursor: pointer;
    }

    .td-turmas:hover {
        transition-timing-function: linear;
        transition-duration: 0.2s;
        background-color: #ECECEC;
        border-radius: 10px;
    }

    .btn-expo {
        background-color: #049DD9;
        color: #ffffff;
    }

    .btn-expo:hover {
        background-color: #048bc0;
        color: #ffffff;
    }

    .turma-model {
        padding: 2%;
        padding-top: 4%;
    }

    .turma-model>.tit-md {
        color: #049DD9;
        text-align: center;
        margin-bottom: 5%;
    }

    .turma-model>ul {
        list-style: none;
    }

    .campo {
        color: #049DD9;
    }
</style>
{{#if voltar}}
    <btn-voltar voltar="{{voltar}}"></btn-voltar>
{{else}}
    <btn-voltar voltar="/"></btn-voltar>
{{/if}}
<input type="hidden" name="quant" id="quant" value="{{turmas.length}}">
<script>
    setInterval(() => socket.emit('veri-turmas-turmas', $('#quant').val()), 500)

    socket.on('veri-turmas-turmas-res', recarregar => {
        if (recarregar) {
            window.location.reload()
        }
    })
</script>
{{#if turmas}}
    <nav id="pesquisar-turmas" class="row">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
